class Auto
{
    // Instanzvariabeln
    private hersteller;

    public modell;

    // Konstruktor
    public Auto(String hersteller, String modell, int ps)
    {
        this.hersteller = hersteller;
        // ...
    }

    // Methoden
    public double fahren() {
        return Math.random() * this.ps;
    }

    public setPs(ps) {
        if (ps > 10000) {
            // Fehler!!
        }

        this.kw = ps * 0.4;
    }
}

Auto.ps = 999099999;